{
  "apps": [
    {
      "name": "express-ts-app",
      "script": "dist/index.js",
      "instances": 1,
      "autorestart": true,
      "watch": false,
      "max_memory_restart": "1G",
      "merge_logs": true,
      "log_date_format": "YYYY-MM-DD HH:mm:ss",
      "env": {
        "NODE_ENV": "production",
        "PORT": 3000
      }
    }
  ]
}
